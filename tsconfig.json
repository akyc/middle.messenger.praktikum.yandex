{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~*": [
                "./*"
            ]
        },
        "outDir": "dist",
        "target": "es2016",
        "lib": [
            "es2017",
            "dom"
        ],
        "declaration": false,
        "module": "commonjs",
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true
    },
    "include": [
        "./src/**/*"
    ]
}