{
    "extends": [
        "stylelint-config-standard-scss"
    ],
    "rules": {
        "max-nesting-depth": 5,
        "selector-class-pattern": null,
        "at-rule-no-unknown": true,
        "color-hex-case": "lower",
        "unit-no-unknown": null
    },
    "ignoreFiles": [
        ".parcel-cache/*",
        "dist/*",
        "node_modules/*"
    ]
}